@model WebApp.Areas.Authorized.ViewModels.ProfileFavoriteMovieCreateEditVM

@{
    ViewData["Title"] = "Create";
}

<h1>@Base.Resources.Common.Create</h1>

<h4>@App.Resources.App.Domain.Profile.ProfileFavoriteMovie.ProfileFavoriteMovieString</h4>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <partial name="_CreateEdit" model="Model"/>

            <div class="form-group">
                <input type="submit" value="@Base.Resources.Common.Create" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-route-id="@ViewContext.RouteData.Values["id"]">@Base.Resources.Common.BackToList</a>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}