@model App.Domain.Movie.Video

@{
    ViewData["Title"] = "Details";
}

<h1>@Base.Resources.Common.Details</h1>

<div>
    <h4>@App.Resources.App.Domain.Movie.Video.VideoString</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Season)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Season)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Model.Title
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FileUri)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FileUri)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Duration)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Duration)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Model.Description
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MovieDetails)
        </dt>
        <dd class = "col-sm-10">
            @Model.MovieDetails!.Title
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">@Base.Resources.Common.Edit</a> |
    <a asp-action="Index">@Base.Resources.Common.BackToList</a>
</div>
