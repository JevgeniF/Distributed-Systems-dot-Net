                <a class="nav-link text-dark" asp-area="Authorized" asp-controller="Genres" asp-action="Index">@Genre.GenreString</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="Authorized" asp-controller="MovieTypes" asp-action="Index">@MovieType.MovieTypeString</a>
            </li>
        }
