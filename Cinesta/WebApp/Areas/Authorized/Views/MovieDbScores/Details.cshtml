@using App.Resources.App.Domain.Movie
@using Base.Resources
@model App.BLL.DTO.MovieDbScore

@{
    ViewData["Title"] = "Details";
}

<h1>@Common.Details</h1>

<div>
    <h4>@MovieDbScore.MovieDbScoreString</h4>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ImdbId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ImdbId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Score)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Score)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MovieDetails)
        </dt>
        <dd class="col-sm-10">
            @Model.MovieDetails!.Title
        </dd>
    </dl>
</div>
<div>
    @if (User.IsInRole("admin"))
    {
        <a asp-action="Edit" asp-route-id="@Model?.Id">@Common.Edit</a>
    }
    <a asp-action="Index">@Common.BackToList</a>
</div>