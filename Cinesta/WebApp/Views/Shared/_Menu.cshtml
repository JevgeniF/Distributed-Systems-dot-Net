                <a class="nav-link text-dark" asp-area="Authorized" asp-controller="CastInMovies" asp-action="Index">@CastInMovie.CastInMovieString</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="Authorized" asp-controller="MovieGenres" asp-action="Index">@MovieGenre.MovieGenreString</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="Authorized" asp-controller="UserRatings" asp-action="Index">@UserRating.UserRatingString</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="Authorized" asp-controller="MovieDBScores" asp-action="Index">@MovieDbScore.MovieDbScoreString</a>
