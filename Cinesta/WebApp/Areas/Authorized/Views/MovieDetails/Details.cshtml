@using App.Resources.App.Domain.Movie
@using Base.Resources
@model App.Domain.Movie.MovieDetails

@{
    ViewData["Title"] = "Details";
}

<h1>@Common.Details</h1>

<div>
    <h4>@MovieDetails.MovieDetailsString</h4>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PosterUri)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PosterUri)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Model.Title
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Released)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Released)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Model.Description
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AgeRating)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AgeRating!.Naming)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MovieType)
        </dt>
        <dd class="col-sm-10">
            @Model.MovieType!.Naming
        </dd>
    </dl>
</div>
<div>
    @if (User.IsInRole("admin"))
    {
        <a asp-action="Edit" asp-route-id="@Model?.Id">@Common.Edit</a>
    }
    <a asp-action="Index">@Common.BackToList</a>
</div>