@using Base.Resources
@model App.BLL.DTO.PaymentDetails?

@{
    ViewData["Title"] = "Index";
}


<h1>@Common.Index</h1>

<p>
    @if (Model == null)
    {
        <a asp-action="Create">@Common.Create</a>
    }
</p>
<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model!.CardType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model!.CardNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model!.ValidDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model!.SecurityCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model!.AppUser)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @if (Model != null)
    {
        <tr>
            <td>
                @Html.DisplayFor(model => model!.CardType)
            </td>
            <td>
                @Html.DisplayFor(model => model!.CardNumber)
            </td>
            <td>
                @Html.DisplayFor(model => model!.ValidDate)
            </td>
            <td>
                @Html.DisplayFor(model => model!.SecurityCode)
            </td>
            <td>
                @(Model?.AppUser!.Name + " " + Model?.AppUser!.Surname)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@Model!.Id">@Common.Edit</a>
                <a asp-action="Details" asp-route-id="@Model!.Id">@Common.Details</a>
                <a asp-action="Delete" asp-route-id="@Model!.Id">@Common.Delete</a>
            
            </td>
        </tr>
    }
    </tbody>
</table>