@using App.Resources.App.Domain.Movie
@using Base.Resources
@model App.Domain.Movie.MovieDbScore

@{
    ViewData["Title"] = "Delete";
}
@if (User.IsInRole("admin"))
{
    <h1>@Common.Delete</h1>

    <div>
        <h4>@MovieDbScore.MovieDbScoreString</h4>
        <hr/>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ImdbId)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ImdbId)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Score)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Score)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.MovieDetails)
            </dt>
            <dd class="col-sm-10">
                @Model.MovieDetails!.Title
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id"/>
            <input type="submit" value="@Common.Delete" class="btn btn-danger"/> |
            <a asp-action="Index">@Common.BackToList</a>
        </form>
    </div>
}
else
{
    <h4 class="alert-danger">@Common.Unauthorized</h4>
    <p class="alert-danger">@Common.NoRights</p>
    <a asp-action="Index">@Common.BackToList</a>
}