@using App.Resources.App.Domain.Profile
@using Base.Resources
@model App.Domain.Profile.ProfileMovie

@{
    ViewData["Title"] = "Delete";
}

<h1>@Common.Delete</h1>

<div>
    <h4>@ProfileMovie.ProfileMovieString</h4>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserProfile)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserProfile!.Name)
        </dd>
        <dt class="col-sm-2">
            @ProfileMovie.MovieDetails
        </dt>
        <dd class="col-sm-10">
            @Model.MovieDetails!.Title
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id"/>
        <input type="submit" value="@Common.Delete" class="btn btn-danger"/> |
        <a asp-action="Index">@Common.BackToList</a>
    </form>
</div>