@using App.Resources.App.Domain.Movie
@using Base.Extensions
@using Base.Resources
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model App.BLL.DTO.UserRating

@{
    ViewData["Title"] = "Details";
}

<h1>@Common.Details</h1>

<div>
    <h4>@UserRating.UserRatingString</h4>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Rating)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Rating)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Comment)
        </dt>
        <dd class="col-sm-10">
            @Model.Comment
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AppUser)
        </dt>
        <dd class="col-sm-10">
            @Model.AppUser!.Name
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MovieDetails)
        </dt>
        <dd class="col-sm-10">
            @Model.MovieDetails!.Title
        </dd>
    </dl>
</div>
<div>
    @if (User.GetUserId() == Model.AppUserId || User.IsInRole("admin"))
    {
        <a asp-action="Edit" asp-route-id="@Model?.Id">@Common.Edit</a>
    }
    <a asp-action="Index">@Common.BackToList</a>
</div>