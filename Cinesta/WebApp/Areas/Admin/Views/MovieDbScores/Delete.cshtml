@model App.Domain.Movie.MovieDbScore

@{
    ViewData["Title"] = "Delete";
}

<h1>@Base.Resources.Common.Delete</h1>

<div>
    <h4>@App.Resources.App.Domain.Movie.MovieDbScore.MovieDbScoreString</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ImdbId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ImdbId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Score)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Score)
        </dd>
        <dt class = "col-sm-2">
