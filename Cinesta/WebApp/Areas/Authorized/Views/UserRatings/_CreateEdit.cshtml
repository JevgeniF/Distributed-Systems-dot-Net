<div class="form-group">
    <label asp-for="UserRating.Rating" class="control-label">@UserRating.Rating</label>
    <input asp-for="UserRating.Rating" class="form-control"/>
    <span asp-validation-for="UserRating.Rating" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="UserRating.Comment" class="control-label">@UserRating.Comment</label>
    <input asp-for="UserRating.Comment" class="form-control"/>
