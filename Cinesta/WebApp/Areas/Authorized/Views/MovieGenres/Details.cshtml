@using App.Resources.App.Domain.Movie
@using Base.Resources
@model App.Domain.Movie.MovieGenre

@{
    ViewData["Title"] = "Details";
}

<h1>@Common.Details</h1>

<div>
    <h4>@MovieGenre.MovieGenreString</h4>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MovieDetails)
        </dt>
        <dd class="col-sm-10">
            @Model.MovieDetails!.Title
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Genre)
        </dt>
        <dd class="col-sm-10">
            @Model.Genre!.Naming)
        </dd>
    </dl>
</div>
<div>
    @if (User.IsInRole("admin"))
        {
            <a asp-action="Edit" asp-route-id="@Model?.Id">@Common.Edit</a>
        }
    <a asp-action="Index">@Common.BackToList</a>
</div>