@model IEnumerable<App.Domain.Profile.ProfileFavoriteMovie>

@{
    ViewData["Title"] = "Index";
}

<h1>@Base.Resources.Common.Index</h1>

<p>
    <a asp-action="Create">@Base.Resources.Common.Create</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserProfile)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MovieDetails)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserProfile!.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MovieDetails!.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedBy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdatedBy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdatedAt)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">@Base.Resources.Common.Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">@Base.Resources.Common.Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">@Base.Resources.Common.Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
