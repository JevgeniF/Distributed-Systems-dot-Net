@using App.Resources.App.Domain.Profile
@using Base.Resources
@model App.Domain.Profile.ProfileFavoriteMovie

@{
    ViewData["Title"] = "Details";
}

<h1>@Common.Details</h1>

<div>
    <h4>@ProfileFavoriteMovie.ProfileFavoriteMovieString</h4>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserProfile)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserProfile!.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MovieDetails)
        </dt>
        <dd class="col-sm-10">
            @Model.MovieDetails!.Title
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">@Common.Edit</a> |
    <a asp-action="Index">@Common.BackToList</a>
</div>