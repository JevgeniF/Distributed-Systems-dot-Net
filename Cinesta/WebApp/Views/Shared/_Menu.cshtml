                <a class="nav-link text-dark" asp-area="Authorized" asp-controller="UserProfiles" asp-action="Index">@UserProfile.UserProfileString</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="Authorized" asp-controller="Subscriptions" asp-action="Index">@Subscription.SubscriptionString</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="Authorized" asp-controller="PaymentDetails" asp-action="Index">@PaymentDetails.PaymentDetailsString</a>
